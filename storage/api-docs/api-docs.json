                    "Client"
                ],
                "summary": "Register a new customer",
                "description": "Register a new customer",
                "operationId": "register_client",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "city",
                                    "state",
                                    "address",
                                    "phone"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "text"
                                    },
                                    "email": {
                                        "type": "email"
                                    },
                                    "password": {
                                        "type": "password"
                                    },
                                    "city": {
                                        "type": "text"
                                    },
                                    "state": {
