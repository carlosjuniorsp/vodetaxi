                                    },
                                    "address": {
                                        "type": "text"
                                    },
                                    "phone": {
                                        "type": "text"
                                    }
                                },
                                "type": "object"
                            }
                        },
                        "application/json": {
                            "schema": {}
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Register Successfully",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": [
                                    {
                                        "name": "carlos",
                                        "email": "example@email.com.br",
                                        "password": "12345678",
                                        "city": "Suzano",
                                        "state": "SP",
                                        "address": "Rua 01",
                                        "phone": "1195252-8596",
                                        "account_validation": "0"
                                    }
                                ]
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "404": {
                        "description": "Resource Not Found"
                    }
                }
            }
        },
        "/api/clients/activation/{id}": {
            "put": {
                "tags": [
                    "Client"
                ],
                "summary": "Activate customer account",
                "description": "Activate customer account",
                "operationId": "active_client",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Client id",
                        "required": true
                    },
                    {
                        "name": "account_validation",
                        "in": "query",
                        "description": "1 active and 0 deactive",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Register Successfully",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": [
                                    {
                                        "account_validation": "1"
                                    }
                                ]
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    },
                    "404": {
                        "description": "Resource Not Found"
                    }
                }
            }
        },
        "/api/clients/{id}": {
            "delete": {
                "tags": [
                    "Client"
                ],
                "summary": "Deactive customer account",
                "description": "Deactive customer account",
                "operationId": "destroy_client",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Client id",
                        "required": true
                    }
