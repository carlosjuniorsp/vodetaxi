{
    "openapi": "3.0.0",
    "info": {
        "title": "Vo de Taxi",
        "version": "1.0.0"
    },
    "paths": {
        "/api/clients": {
            "get": {
                "tags": [
                    "Client"
                ],
                "summary": "Display all customers",
                "description": "Display all customers",
                "operationId": "display_clients",
